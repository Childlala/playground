
    


<h1>Listing articles</h1>
 <hr>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="5"></th>
  </tr>
</thead>
<tbody>
  <% @playgrounds.each do |playground| %>
    <tr>
      <td><%= playground.title %></td>
      <td><%= playground.text %></td>
      <td><%= link_to 'Show', playground_path(playground) %></td>
      <td><%= link_to 'Edit', edit_playground_path(playground) %></td>
      <td><%= link_to 'Destroy', playground_path(playground),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
   </tbody>
</table>

