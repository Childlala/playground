

<div class="center">
  <div class="row">
    <% @playgrounds.each do |playground| %>
    <div class="col-md-3 col-xs-12">
      <div class="thumbnail" > 
        <%=link_to( image_tag(playground.picture.url), playground_path(playground), :class=>"work") %>
            <div class="caption">
              <h3></h3>
              <p><%= link_to playground.title, playground_path(playground) %></p>
            </div>
      </div>
    </div>
    <% end %>
  </div>
</div>




